@page "/counter-component"

<PageTitle>Counter</PageTitle>
<div class="m-3">
    <h3>Counter</h3>

    <div class="card p-3">
        <div>
            <button class="btn btn-primary" type="button" @onclick="CounterDown">Verlaag counter</button>
            <span>@Counter</span>
            <button class="btn btn-warning" type="button" @onclick="@(() => CounterUp(1))">Verhoog counter</button>
            <button class="btn btn-danger" type="button" @onclick="@Reset">Reset</button>
        </div>
    </div>

    <div class="card p-3 d-none">
        <input @onchange="InputChangeEvent" />
        <input @onchange="@(e => InputChangeEvent(e))" />
    </div>
</div>

@code {
    private int Counter { get; set; } = 0;

    private void CounterDown()
    {
        Counter -= 1;
    }

    private void CounterUp(int amount = 1)
    {
        Counter += amount;
    }

    private void InputChangeEvent(ChangeEventArgs e)
    {
        string? arg = e.Value?.ToString(); 
    }

    private void Reset()
    {
        Counter = 0;
    }
}